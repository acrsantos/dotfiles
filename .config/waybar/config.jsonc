            "class<libreoffice-writer>": " Ôç∂",
            "class<libreoffice-calc>": " Ôç∏",
            "class<gimp>": " Ôå∏",
            "title<.*gmail.*>": " Û∞ä´",
            "class<telegram-desktop>": " ÔãÜ",
            "class<virt-manager>": " Ôäá",
            "class<com.obsproject.Studio>": " ÓæΩ",
