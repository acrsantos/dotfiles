{
    "layer": "top",
    "position": "top",
    "spacing": 2,
    "margin": 0,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "cpu",
        "memory",
        "pulseaudio",
        "battery",
        "clock"
    ],
    "cpu": {
        "interval": 5,
        "format": "CPU: {usage}%",
        "max-length": 10
    },
    "disk": {
        "interval": 30,
        "format": "Û∞ãä {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "unit": "GB",
        "tooltip-format":  "Available {free} of {total}"
    },
    "memory": {
        "interval": 5,
        "format": "RAM: {percentage}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "RAM - {used:0.1f}GiB used"
    },
    "hyprland/workspaces": {
        "on-click": "activate",
        // "format": "{name}",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        },
        "format": "{icon}{windows}",
        "format-window-separator": " ",
        "window-rewrite-default": "",
